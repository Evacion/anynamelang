<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
    <head>
        <title>My Portfolio</title>
        <%- include("../partials/head.ejs") %>
        <script src="/scripts/getCountryFlag.js"></script>
    </head>
    <body>
        <div id="navbarLocation"></div>
        <div class="demo-wrap">
            <center>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <% for(var x=0; searchTerms.length > x; x++) { %>
                        <button type="button" 
                                class="btn btn-secondary changeIndexButton"
                                data-index="<%= x %>"
                                <% if(x == dataIndex){ %> disabled <% } %>>
                            <%= searchTerms[x] %>
                        </button>
                    <% } %>
                </div>
            </center>
            <!-- <span class="fi fi-gr fis"></span> -->
            <table class="table table-hover">
                <thead>
                    <th>Location</th>
                    <th>Temperature</th>
                    <th>Weather</th>
                    <th>Day</th>
                    <th>Low</th>
                    <th>High</th>
                    <th>Flag</th>
                    <th>Forecast 1</th>
                    <th>Forecast 2</th>
                    <th>Forecast 3</th>
                </thead>
                <tbody>
                    <% weatherData.forEach(entry => { %>
                      <tr>
                        <td><%= entry.location.name %></td>
                        <td><%= entry.current.temperature %>°C</td>
                        <td>
                            <%= entry.current.skytext %><br>
                            <img src="<%= entry.current.imageUrl %>" alt="Weather GIF">
                        </td>
                        <td><%= entry.current.day %></td>
                        <td><%= entry.forecast[0].low %>°C</td>
                        <td><%= entry.forecast[0].high %>°C</td>
                        <td class="latLongVars">
                            <div id="<%= entry.location.lat %>, <%= entry.location.long %>" hidden></div>
                        </td>
                        <td><%= entry.forecast[1].skytextday %> on<br><%= entry.forecast[1].date %></td>
                        <td><%= entry.forecast[2].skytextday %> on<br><%= entry.forecast[2].date %></td>
                        <td><%= entry.forecast[3].skytextday %> on<br><%= entry.forecast[3].date %></td>
                      </tr>
                    <% }); %>
                </tbody>
            </div>
        </div>
        <footer><center>Created By Amogus</center></footer>
    </body>
</html>
<script>
    function handleButtonClick(event) { window.location.href = `/weather?dataIndex=${event.target.getAttribute('data-index')}&searchTerm=${event.target.innerText}`; }
    var buttons = document.querySelectorAll('.changeIndexButton');
    buttons.forEach(function(button) { button.addEventListener('click', handleButtonClick); });

    async function getCountryFlag(entry, latitude, longitude) {
        const apiKey = '710d917c0e1746b3aef14975d6ac263a'; // Replace with your API key
        const apiUrl = `https://api.opencagedata.com/geocode/v1/json?q=${latitude}+${longitude}&key=${apiKey}`;

        try {
            const response = await fetch(apiUrl);
            const data = await response.json();
            if (data.results.length > 0) {
                // Extract the country code from the first result
                const countryCode = data.results[0].components.country_code.toUpperCase();
                const flagStyle = "flat"; // Choose the style of the flag
                const flagSize = "64"; // Choose the size of the flag image
                const flagImageUrl = `https://www.countryflags.io/${countryCode}/${flagStyle}/${flagSize}.png`;
                console.log(flagImageUrl)
                var flagImage = document.createElement('img')
                flagImage.src = flagImageUrl
                entry.appendChild(flagImage)
                return flagImageUrl;
            } else {
                throw new Error('No results found');
            }
        } catch (error) {
            console.error('Error fetching country flag:', error);
            return null;
        }
    }
    var flagCells = document.querySelectorAll('.latLongVars');
    flagCells.forEach(entry => {
        console.log(entry.children[0].id.split(","))
        getCountryFlag(entry, entry.children[0].id.split(",")[0], entry.children[0].id.split(",")[1])
    })

</script>